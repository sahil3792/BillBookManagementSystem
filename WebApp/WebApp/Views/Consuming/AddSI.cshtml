@model SI
<title>Imagination Invoice Example</title>
<!-- For Bootstrap-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<!-- CSS For Print Format -->
<link rel="stylesheet" media="print" href="~/assets/invoiceprint.css">

<!-- CSS For Invoice -->
<link rel="stylesheet" href="~/assets/invoice.css">

<!-- jQuery CDN -->
<script src="https://code.jquery.com/jquery-3.6.2.slim.js" integrity="sha256-OflJKW8Z8amEUuCaflBZJ4GOg4+JnNh9JdVfoV+6biw=" crossorigin="anonymous"></script>

<!-- For Invoice  -->
<script src="~/assets/invoice.js"></script>





<form method="post">
  




    <div class="card">
        <div class="card-header text-center">
            <h4>INVOICE</h4>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-8">
                    <div class="input-group mb-3">
                        <span class="input-group-text">Bill to</span>

                        <select id="GetpartyName" asp-for="partyName" class="form-control" >
                        </select>

                    </div>

                    @*  <div class="input-group mb-3">
                    <span class="input-group-text">Address</span>
                    <input type="text" class="form-control" placeholder="Address">
                    </div>

                    <div class="input-group mb-3">
                    <span class="input-group-text">City</span>
                    <input type="text" class="form-control" placeholder="City">
                    </div> *@
                </div>
                <div class="col-8">
                    <div class="input-group mb-3">
                        <span class="input-group-text">Ship to</span>
                        <input type="text" class="form-control" asp-for="shippingAddress" name="shippingaddress" id="partyAddress" readonly /> <!-- Read-only input for displaying address -->



                    </div>


                </div>
                <div class="col-4">

                    <div class="input-group mb-3">
                        <span class="input-group-text">Inv. No</span>
                        <input type="text" id="InvoiceNo" name="InvoiceNo" readonly class="form-control" placeholder="Invoice. No">
                            <input type="hidden" id="InvoiceIDHidden" name="InvoiceID" asp-for="InvoiceID">

                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text">Inv. Date</span>
                        <input type="date" id="InvoiceDate" name="InvoiceDate" asp-for="invoiceDate" class="form-control" readonly placeholder="Invoice Date">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text">Due Date</span>
                        <input type="date" class="form-control" name="dueDate" asp-for="dueDate" placeholder="Due Date">
                    </div>



                </div>
            </div>


            <table class="table table-bordered">
                <thead class="table-success">
                    <tr>
                        <th scope="col">Sr.no</th>
                        <th scope="col">Items/ Services</th>
                        <th scope="col">HSN\SAC</th>
                        <th scope="col" class="text-end">Qty</th>
                        <th scope="col" class="text-end">Rate</th>
                        <th scope="col" class="text-end">Tax</th>

                        <th scope="col" class="text-end">Amount</th>
                        <th scope="col" class="text-end">Payment Mode</th>
                        <th scope="col" class="text-end">Status</th>
                        <th scope="col" class="NoPrint">
                            <button type="button" class="btn btn-sm btn-success" onclick="BtnAdd()">+</button>

                        </th>

                    </tr>
                </thead>
                <tbody id="TBody">
                    <tr id="TRow" class="d-none">
                        <th scope="row">1</th>

                        <td>

                            <select id="GetItemName" class="form-control GetItemName" onchange="demotp(this)"></select>
                        </td>
                        <td><input type="text" id="hsncode" class="form-control hsncode" /></td>

                        <td><input type="text" id="qty" class="form-control text-end qty" name="qty" onchange="Calc(this);"></td>
                        <td><input type="text" id="rate" class="form-control text-end rate" name="rate" onchange="Calc(this);"></td>
                        <td><input type="text" id="tax" class="form-control text-end tax" name="tax" value="0" disabled=""></td>
                        <td><input type="text" class="form-control text-end" name="amt" value="0" disabled=""></td>
                        <td>
                            <select class="form-control text-end" name="paymentMode" asp-for="paymentMode">
                            <option>Cash</option>
                            <option>UPI</option>
                        </select></td>
                        <td>
                            <select class="form-control text-end" name="Status" asp-for="Status">
                                <option>Pending</option>
                                <option>Paid</option>
                            </select>
                        </td>
                        
                        <td class="NoPrint"><button type="button" class="btn btn-sm btn-danger" onclick="BtnDel(this)">X</button></td>
                    </tr>
                </tbody>
            </table>

            

            <div class="row">
                <div class="col-8">

                    <input type="submit" @* onclick="Demo()" *@ value="Save" class="btn btn-primary" ></input>

                </div>
                <div class="col-4">
                    <div class="input-group mb-3">
                        <span class="input-group-text">Total</span>
                        <input type="number" class="form-control text-end" id="FTotal" name="FTotal" disabled="">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">GST</span>
                        <input type="number" class="form-control text-end" id="FGST" name="FGST" onchange="GetTotal()">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Net Amt</span>
                        <input type="number" class="form-control text-end" asp-for="Amount" id="FNet" name="FNet" >
                    </div>


                </div>
            </div>
        </div>
    </div>



<script>
    $(document).ready(function () {
        // Generate Invoice No. (this can be fetched from API if needed)
            var invoiceNumber = 'INV' + Date.now();
            $('#InvoiceNo').val(invoiceNumber); // Display invoice number in readonly field
            $('#InvoiceIDHidden').val(invoiceNumber);

        // Set Invoice Date to current date
        var currentDate = new Date().toISOString().slice(0, 10);
        $('#InvoiceDate').val(currentDate);
    });
</script>
</form>

