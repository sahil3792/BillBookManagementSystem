<div class="card">
    <div class="card-header">
        <h5>Create Item</h5>
        <div class="input-group row">
            <h5>Create Item</h5>
            <div class="form-control">
                <input class="form-control mr-sm-2" id="search" type="search" placeholder="Search" aria-label="Search">
                <div class="col-sm-10">
                    <button class="btn btn-outline-success my-2 my-sm-0 ml-2" type="submit" onclick="SearchItems()">Search</button>
                </div>
            </div>
        </div>
        <div class="input-group row">
            <div class="form-control">
                <a class="btn btn-primary" asp-action="AddItems" asp-controller="Inventory">Create Item</a>
            </div>
        </div>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table id="inventoryTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Item Code</th>
                        <th>Stock Quantity</th>
                        <th>Selling Price</th>
                        <th>Purchase Price</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var d in Model)
                        {
                            <tr id="itemRow-@d.id">
                                <th scope="row">@d.ItemName</th>
                                <td>@d.ItemCode</td>
                                <td>@d.OpeningStock</td>
                                <td>@d.SalesPrice</td>
                                <td>@d.PurchasePrice</td>
                                <td>
                                    <button class="btn btn-sm btn-danger" onclick="deleteItem('@d.id')">Delete</button>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>


