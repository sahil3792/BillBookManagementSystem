@{
    ViewBag.Title = "Payment";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Payment</h5>
            </div>
            <div class="card-block">

                <div class="container-fluid">
                    <h5>Make a Payment</h5>

                    @if (TempData["SuccessMessage"] != null)

                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="SubmitPayment" method="post">
                        <input type="hidden" name="purchaseOrderId" value="@ViewBag.PurchaseOrderId" />

                        <div class="form-group row">
                            <label for="paymentMethod" class="col-sm-2 col-form-label"><b>Select Payment Method</b></label>
                            <div class="col-sm-6">
                                <select class="form-control" id="paymentMethod" name="paymentMethod">
                                    <option value="">Select...</option>
                                    <option value="UPI">UPI (Display Only)</option>
                                    <option value="Cash">Cash</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary">Submit Payment</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


