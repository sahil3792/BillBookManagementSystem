@model ItemReportByPartyViewModel
<form method="post">
    <div class="input-group row">
        <div class="col-md-3">
            <select id="partyCategory" asp-for="categoryid">
                <option value="">Show All Parties</option>
            </select>
        </div>
        <div class="col-md-3">
            <select id="partyName" asp-for="partyid">
                <option value="">Select Party Names</option>
            </select>
        </div>
        <div class="col-md-3">
            <input value="search" type="submit" class="btn btn-primary"/>
        </div>
    </div>
</form>

<div class="card-block table-border-style">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Item Name</th>
                    <th scope="col">Item Code</th>
                    <th scope="col">Opening Stock</th>
                    <th scope="col">Sales Quantity</th>
                    <th scope="col">Sales Price</th>
                    <th scope="col">Purchase Price</th>
                </tr>
            </thead>
            <tbody id="salesTableBody">
            </tbody>
        </table>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/ajax/javascript.js"></script>
