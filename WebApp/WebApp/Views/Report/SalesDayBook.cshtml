            <th scope="col">GSTIN Number</th> 
            <th scope="col">Status</th> 
        </tr>
    </thead>
    <tbody id="salesTableBody">
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.InvoiceId</td>
