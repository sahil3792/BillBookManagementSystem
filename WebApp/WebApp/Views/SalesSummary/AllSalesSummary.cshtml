<div class="row">
    <div class="col-sm-12">

        <div class="card">
            <div class="card-header">
                <h5>All Sales Summary</h5>

            </div>
            <div class="card-block">

                <form method="post">
                    <div class="container-fluid">
                       <hr />
                        <div class="row">
                            <div class="col-md-3">
                                <select id="FetchParty" class="form-select">
                                    <option value="">Select Party</option>
                                    <!-- Add options dynamically if needed -->
                                </select>

                                <select id="FetchStatus" class="form-select">
                                    <option value="">Select Status</option>
                                    <!-- Add options dynamically if needed -->
                                </select>
                            </div>
                            </div>
                            </div>

                            <div class="row mt-5">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Invoice Date</th>
                                            <th>Invoice ID</th>
                                            <th>Party Name</th>
                                            <th>Due Date</th>
                                            <th>Amount</th>
                                            <th>Invoice Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="salesSummaryBody">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.invoiceDate.ToString("d")</td> <!-- Format date as needed -->
                                                <td>@item.invoiceId</td>
                                                <td>@item.partyName</td>
                                                <td>@item.dueDate.ToString("d")</td> <!-- Format date as needed -->
                                                <td>@item.amount.ToString("C")</td> <!-- Format as currency if needed -->
                                                <td>@item.invoiceStatus</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                </form>

            </div>
        </div>



    </div>
</div>
